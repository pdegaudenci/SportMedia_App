<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        card_view:cardBackgroundColor="#FDEDFF"
        card_view:cardCornerRadius="46dp"
        card_view:cardElevation="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="25px"
            android:layout_marginRight="15px"
            android:background="#FDEDFF"
            android:gravity="center"
            android:minWidth="25px"
            android:minHeight="25px"
            android:orientation="vertical"
            android:padding="6dp">


            <TextView
                android:id="@+id/header_actividad_popup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:shadowColor="@color/gray"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/lugar_actividad_popup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:shadowColor="@color/gray"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/comunidad_actividad_popup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:shadowColor="@color/gray"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/fecha_actividad_popup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:shadowColor="@color/gray"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/hora_actividad_popup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:shadowColor="@color/gray"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/inscriptos_popup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:shadowColor="@color/gray"
                android:textColor="@color/black"
                android:textSize="18dp" />
            />
            <TextView
                android:id="@+id/descripcion_popup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:shadowColor="@color/gray"
                android:textColor="@color/black"
                android:textSize="18dp" />
            />



        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>