<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="20dp"
    card_view:cardBackgroundColor="@color/cardview_light_background">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    android:gravity="center"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#6094bc"
    android:layout_marginTop="25px"
    android:layout_marginRight="15px"
    android:layout_marginLeft="15px">

        <ImageView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:paddingLeft="2px"
            android:padding="2px"
            android:paddingTop="2px"
            android:id="@+id/icono_actividad" />

        <TextView
            android:id="@+id/header_actividad"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#D3D3D3"
            android:textSize="18dp"
            />
    <TextView
        android:id="@+id/lugar_actividad"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#D3D3D3"
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/comunidad_actividad"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#D3D3D3"
        android:textSize="18dp"
        />
        <TextView
            android:id="@+id/fecha_actividad"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#D3D3D3"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/hora_actividad"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#D3D3D3"
            android:textSize="18dp"
            />
    <TextView
        android:id="@+id/inscriptos"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#D3D3D3"
        android:textSize="18dp"
        />
        />
    <Button
        android:id="@+id/btn_detalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_button"
        android:hint="Ver detalle"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="15sp"
        />

    </LinearLayout>
</androidx.cardview.widget.CardView>


