<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3F3DF"
    tools:context=".fragments.BienvenidoFragment">

    <Button
        android:id="@+id/btn_ir_Misactividades"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bordes_redondos"
        android:drawableLeft="@mipmap/ic_user_foreground"
        android:hint="Mis actividades"
        android:textColorHint="#FFFFFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_ir_sociales"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bordes_redondos"
        android:drawableLeft="@mipmap/ic_red_foreground"
        android:hint="Actividades sociales"
        android:textColorHint="#FFFFFF"
        android:textSize="15sp" />


</LinearLayout>